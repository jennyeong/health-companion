<div class="banner">
  <div class="container">
    <h1>Worry less.</h1>
    <h1>Live healthier.</h1>
    <p>Welcome to MedSafe</p>
    <%= render "shared/btn-primary" %>
  </div>
</div>
<% if !current_user.nil? %>
  <div class="list-container">
    <div class="list-title">
      <p><strong>Reminder</strong></p>
      <%= link_to new_reminder_path do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
    <%= render "shared/card-list-reminder" %>
  </div>
<% end %>

<div class="list-container">
  <div class="list-title">
    <p><strong>Latest Alerts</strong></p>
    <%= link_to reports_path do %>
      <p>See all</p>
    <% end %>
  </div>
  <% if !@reports.nil? %>
    <div class="list-cards">
      <% @reports.each do |report| %>
        <%= render "shared/card-list", report: report %>
      <% end %>
    </div>
  <% end %>
</div>
