<div class="formated-form">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
<h2>Forgot your password?</h2>

  <%= f.input :email,
              required: true,
              autofocus: true,
              wrapper_html: { class: "p" } %>

    <%= f.button :submit, "Reset my password" %>

<% end %>
</div>

<%= render "shared/btmbar" %>
