<div class="text-center mt-3">
  <p class="today-medicine-msg">Your medicines for <span class="today-text">today</span></p>
</div>

<div class="list-container">
  <% @reminders.sort_by_latest.sort{|s| s.next_due_timestamp}.reverse.each do |reminder| %>
    <%# <%= render partial: "shared/card-list-reminder", locals: {reminder: reminder} %>
    <br/>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Create a reminder</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "form", reminder: @reminder %>
      </div>
    </div>
  </div>
</div>
