<div class="container results">
  <%# <div class="results-name"> %>
    <%# <p>H O O R A Y !</p> %>
  <%# </div> %>
  <div class="results-image">
    <%= image_tag(@medicine.photo) %>
  </div>

  <div class="recognized">
    <%= image_tag("Recognized.png") %>
    <p>Your product is</p>
    <p class="recognized-word">Recognized by MedSafe</p>
  </div>

  <div class="results-info">
    <div class="medname">
      <div class="medname-left">
        <p>Product: </p>
      </div>
      <div class="medname-right">
        <%= @medicine.name %>
      </div>
    </div>

    <div class="manufacturer">
      <div class="manufacturer-left">
        <p>Manufacturer: </p>
      </div>
      <div class="manufacturer-right">
        <%= @medicine.manufacturer %>
      </div>
    </div>

    <div class="batch">
      <div class="batch-left">
        <p>Batch: </p>
      </div>
      <div class="batch-right">
        <%= @serial_num.batch %>
      </div>
    </div>

    <div class="mfg-date">
      <div class="mfg-left">
        <p>Manufacture Date:</p>
      </div>
      <div class="mfg-right">
        <%= @serial_num.mfg_date.strftime("%d %b %Y") %>
      </div>
    </div>

    <div class="exp-date">
      <div class="exp-left">
        <p>Expiry Date:</p>
      </div>
      <div class="exp-right">
        <%= (@serial_num.exp_date).strftime("%d %b %Y") %>
      </div>
    </div>
  </div>
  <div class="med-reminder">
    <%= link_to "/reminders/new" do %>
        <button type="button" class="btn btn-primary med-reminder-btn">SET AS REMINDER</button>
    <% end %>
  </div>
</div>
